.container
  height 100%

.wrapper
  clearfix()
  position relative
  max-width $wrapper
  height 100%
  padding-left 15px
  padding-right 15px
  margin-left auto
  margin-right auto

main
  display block
  max-width $wrapper
  width 100%
  padding 0 15px
  margin 0 auto
  position relative

html.flexbox
  body
    display flex
    min-height 100vh
    flex-direction column
  .container
    flex 1


.ui
  font-family: 'Roboto', sans-serif;
  font-size:  18px;
  margin: 0;
  background: #e4e4e4 + 25%
  main
    clearfix()
    max-width none
    padding 0
    section
      width 25%
      height 290px
      line-height 290px
      text-align center
      float left
      border 1px solid black
      h2
        display inline-block
        vertical-align middle

