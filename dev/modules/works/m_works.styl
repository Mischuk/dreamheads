.m_works
  clearfix()
  position relative
  height 100%
  .work-desc,
  .work-preview
    float left
    width 50%
    height 100%
    @media screen and (max-width: 420px)
      width 100%
      height auto
  .work-preview
    position relative
    @media screen and (max-width: 420px)
      height 100%
    .image
      transition opacity 1s ease-in
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background-position 50%
      background-repeat no-repeat
      background-size cover
      opacity 0
      &.current
        transition-delay .7s
        opacity 1
  .work-layout
    transition width 1s ease-in
    position absolute
    left 0
    top 0
    width 50%
    height 100%
    background #111
    z-index 5
    @media screen and (max-width: 420px)
      width 100%
      height 50%
      display none
    &.anim-out
      width 100%
  .work-desc
    position relative
    z-index 10
    display table
    opacity 0
    transition opacity .5s ease-in
    transition-delay 0s
    &.is-active
      transition-delay 1.5s
      transition opacity 1s ease-in
      opacity 1
    @media screen and (max-width: 420px)
      position absolute
      left 0
      top 0
      width 100%
      background #111
      padding-top 15px
    .helper
      display table-cell
      vertical-align middle
    .works-counter
      margin-bottom 15px
      @media screen and (max-width: 420px)
        margin-bottom 5px
      @media screen and (min-width: 500px)
        position absolute
        left 0
        top 0
        padding-top 50px
        text-align center
        width 100%
      @media screen and (min-width: 500px) and (max-height: 400px)
        padding-top 10px
      @media screen and (min-width: 768px) and (min-height: 1024px)
        padding-top 100px
      @media screen and (min-width: 1024px) and (min-height: 768px)
        text-align left
        width 300px
        left 50%
        margin-left -150px
        padding-top 100px
      @media screen and (min-width: 1300px) and (min-height: 768px)
        padding-top 200px
    .works-info
      position relative
      @media screen and (min-width: 1024px) and (min-height: 768px)
        text-align left
        width 300px
        margin-left auto
        margin-right auto
      .number
        z-index -1
        position absolute
        left 0
        width 100%
        font-family: "Helvetica Neue", "Arial Black", "Arial Bold", Gadget, sans-serif;
        font-weight: 700;
        opacity .3
        color #282828
        font-size 100px
        line-height 100px
        top 50%
        margin-top -70px
        text-align center
        @media screen and (min-width: 500px)
          font-size 150px
          line-height 150px
        @media screen and (min-width: 1024px) and (min-height: 768px)
          font-size 200px
          line-height 200px
          margin-top -100px
          margin-left -20px
      .titles
        @media screen and (min-width: 500px)
          margin-bottom 30px
        h2
          display none
          @media screen and (max-width: 420px)
            font-size 24px
            margin-bottom 5px
          @media screen and (min-width: 1400px)
            font-size 60px
          &.current
            display block
      .descriptions
        padding 0 15px
        color #b1b1b1
        @media screen and (min-width: 1024px) and (min-height: 768px)
          padding 0
        .item
          display none
          font-size 14px
          @media screen and (min-width: 500px)
            font-size 16px
            margin-bottom 30px
          &.current
            display block
          p
            margin-bottom 0
            & + p
              margin-top 10px
              @media screen and (max-width: 420px)
                margin-top 5px
      .links
        margin-top 15px
        @media screen and (max-width: 420px)
          margin-top 5px
        a
          display none
          &.current
            display inline-block
            vertical-align middle
            color #d1ab59
            text-decoration underline
            &:hover
              color #fff
    .works-nav
      margin 20px 0
      @media screen and (max-width: 420px)
        margin-top 15px
        margin-bottom 15px
      @media screen and (min-width: 500px)
        margin 0
        position absolute
        left 0
        bottom 0
        padding-bottom 50px
        width 100%
      @media screen and (min-width: 500px) and (max-height: 400px)
        padding-bottom 15px
      @media screen and (min-width: 1300px) and (min-height: 768px)
        padding-bottom 200px
      @media screen and (min-height: 768px) and (min-width: 1024px)
        text-align left
        width 300px
        margin-left auto
        margin-right auto
        left 50%
        margin-left -150px
      ul
        height 10px
        @media screen and (min-height: 768px) and (min-width: 1024px)
          display inline-block
          vertical-align middle
          margin-left auto
          margin-right auto
      li
        display inline-block
        vertical-align top
        width 20px
        height 10px
        line-height 10px
        a
          anim()
          display inline-block
          vertical-align top
          background #757575
          text-indent -9999px
          font-size 0
          width 10px
          height 10px
          border-radius 50%
          border 2px solid #111
          &:hover
            background #cda858
          &.current
            background #111
            border 2px solid #cda858


