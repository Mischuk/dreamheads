.m_works
  clearfix()
  position relative
  height 100%
  .work-desc,
  .work-preview,
  .work-preview-mobile
    float left
    width 50%
    height 100%
    @media screen and (max-width: 768px)
      width 100%
      height auto
  .work-preview-mobile
    display none
    @media screen and (max-width: 768px)
      display block
  .work-preview
    @media screen and (max-width: 768px)
      display none
  .work-preview,
  .work-preview-mobile
    position relative
    @media screen and (max-width: 768px)
      height 100%
    .image
      position absolute
      left -20%
      top 0
      width 120%
      height 100%
      background-position 50%
      background-repeat no-repeat
      background-size cover
      opacity 0
      transition opacity .3s ease-out
      transition-delay 0s
      @media screen and (max-width: 567px)
        left 0
        width 100%
      &.current
        transition opacity 3s ease-in
        transition-delay 0s
        opacity 1
  .work-layout
    transition transform 1s ease-in
    position absolute
    right -55%
    top 0
    width 55%
    height 100%
    background #111
    z-index 150
    @media screen and (max-width: 768px)
      width 100%
      height 50%
      display none

    &.anim-out
      transform translateX(-98%)

  .work-desc
    position relative
    z-index 101
    display table
    opacity 0
    transition opacity .5s ease-in
    transition-delay 0s
    @media screen and (max-width: 567px)
      background #111
      z-index 100
    &.is-active
      transition-delay 1.5s
      transition opacity 1s ease-in
      opacity 1
      .works-counter,
      .works-nav
        transition-delay .3s
        opacity 1
      .works-info
        .titles,
        .descriptions,
        .links
          opacity 1
          transform translateX(0)
        .number
          transform translateX(0)
          opacity .2
        .titles
          transition-delay .3s
        .descriptions
          transition-delay .6s
        .links
          transition-delay .9s

    @media screen and (max-width: 768px)
      position absolute
      left 0
      top 0
      width 100%
      background #111
      padding-top 15px
    .works-info
      .number,
      .titles,
      .descriptions,
      .links
        opacity 0
        transition all .5s cubic-bezier(.25,-0.55,.25,.25)
        transform translateY(20px)
    .works-counter,
    .works-nav
      transition opacity 1s ease-in
      opacity 0
    .helper
      display table-cell
      vertical-align middle
    .works-counter
      margin-bottom 15px
      @media screen and (max-width: 420px)
        margin-bottom 5px
      @media screen and (min-width: 769px)
        position absolute
        left 0
        top 0
        padding-top 50px
        text-align center
        width 100%
        text-align left
        width 300px
        left 50%
        margin-left -150px
        padding-top 100px
      @media screen and (min-width: 1240px)
        padding-top 200rem
    .works-info
      position relative
      @media screen and (min-width: 769px)
        text-align left
        width 300px
        margin-left auto
        margin-right auto
      .number
        z-index -1
        position absolute
        left 0
        width 100%
        font-family: "Helvetica Neue", "Arial Black", "Arial Bold", Gadget, sans-serif;
        font-weight: 700;
        opacity .2
        color #282828
        font-size 100px
        line-height 100px
        top 50%
        margin-top -70px
        text-align center
        @media screen and (min-width: 769px)
          font-size 200px
          line-height 200px
          margin-top -100px
          text-align left
        @media screen and (min-width: 1240px)
          font-size 280rem
          line-height 280rem
          margin-top -165rem
      .titles
        @media screen and (min-width: 768px)
          margin-bottom 15px
        h2
          display none
          @media screen and (max-width: 420px)
            font-size 24px
          @media screen and (min-width: 1240px)
            font-size 60rem
            line-height 1
          &.current
            display block
      .descriptions
        padding 0 15px
        color #b1b1b1
        margin-bottom 10px
        @media screen and (min-width: 769px)
          padding 0
        .item
          display none
          font-size 14px
          @media screen and (min-width: 769px)
            font-size 16px
            margin-bottom 30px
          @media screen and (min-width: 1240px)
            font-size 16rem
            margin-bottom 30rem
          &.current
            display block
          p
            margin-bottom 0
            & + p
              margin-top 10px
              @media screen and (max-width: 420px)
                margin-top 5px
      .links
        margin-top 15px
        line-height 0
        margin-top 0
        @media screen and (max-width: 420px)
          margin-top 5px
        a
          display none
          @media screen and (min-width: 1240px)
            font-size 16rem
          &.current
            display inline-block
            vertical-align middle
            color #d1ab59
            text-decoration underline
            &:hover
              color #fff
    .works-nav
      margin 20px 0
      @media screen and (max-width: 420px)
        margin-top 15px
        margin-bottom 15px
      @media screen and (min-width: 769px)
        margin 0
        position absolute
        bottom 0
        padding-bottom 50px
        width 100%
        text-align left
        width 300px
        margin-left auto
        margin-right auto
        left 50%
        margin-left -150px
      @media screen and (min-width: 1240px)
        bottom 200rem
      @media screen and (min-width: 1240px) and (max-height: 690px)
        bottom 50rem
      ul
        height 10px
        @media screen and (min-width: 769px)
          display inline-block
          vertical-align middle
          margin-left auto
          margin-right auto
      li
        display inline-block
        vertical-align top
        width 20px
        height 10px
        line-height 10px
        a
          anim()
          display inline-block
          vertical-align top
          background #757575
          text-indent -9999px
          font-size 0
          width 10px
          height 10px
          border-radius 50%
          border 2px solid #111
          &:hover
            background #cda858
          &.current
            background #111
            border 2px solid #cda858


