#works
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  opacity 0
  display none
  html.no-touchevents &
    @media screen and (max-width: 768px)
      z-index 10
  .work-canvas-layout
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    z-index 100
    @media screen and (max-width: 768px)
      display none
  canvas
    position relative
    left 0
    top 0
    width 100%
    height 100%
  .work-preview,
  .work-preview-mobile
    transform scale(1.1)
    transition transform 1s ease-out
  .work-desc.is-active + .work-preview,
  .work-desc.is-active + .work-preview + .work-preview-mobile
    transform scale(1)
    transition transform 2s ease-in
