.m_lead
  position relative
  height 100%
  background #111
  display table
  width 100%
  z-index 10
  @media screen and (min-width: 1240px)
    display block
  .mouse-down
    opacity 0
    @media screen and (max-width: 1024px)
      display none !important
    @media screen and (max-height: 700px)
      display none !important
    html.no-touchevents &
      position absolute
      left 50%
      bottom 50px
      background: url('../images/sprite.png') no-repeat 0 -50px;
      width: 46px;
      height: 71px;
      margin-left -(@width/2)
      z-index 100
      cursor pointer
      retina()
      @media screen and (min-width: 1240px)
        bottom 100rem
      &:hover
        background-position -50px -50px
  .shapes
    opacity 0
    position absolute
    left 0
    bottom 0
    width 100%
    height 100%
    z-index 10
    @media screen and (max-height: 414px)
      display none !important
    @media screen and (min-width: 1240px)
      bottom -70rem
    .layers
      position absolute
      left 0
      bottom 0
      width 100%
      height 100%
      .layer
        position absolute
        left -1%
        bottom 0
        width 102%
        img
          width 100%
      .top
        bottom -40px
        transition transform .4s linear
        body.fp-viewing-1 &
          transform translateY(80px)
          @media screen and (min-width: 1024px) and (min-height: 768px)
            transform translateY(80px)
      .mid
        bottom -40px
        transition transform .5s linear
        body.fp-viewing-1 &
          transform translateY(35px)
          @media screen and (min-width: 1024px) and (min-height: 768px)
            transform translateY(105px)
          @media screen and (min-width: 1600px) and (min-height: 768px)
            transform translateY(140px)
      .bot
        bottom -50px
        transition transform .6s linear
        body.fp-viewing-1 &
          transform translateY(60px)
          @media screen and (min-width: 1024px) and (min-height: 768px)
            transform translateY(180px)
          @media screen and (min-width: 1600px) and (min-height: 768px)
            transform translateY(240px)
      .low
        bottom -45px
        transition transform .7s linear
        body.fp-viewing-1 &
          transform translateY(70px)
          @media screen and (min-width: 1024px) and (min-height: 768px)
            transform translateY(210px)
          @media screen and (min-width: 1600px) and (min-height: 768px)
            transform translateY(280px)
  .text
    position relative
    z-index 20
    display table-cell
    vertical-align middle
    @media screen and (min-width: 600px) and (min-height: 415px)
      padding-bottom 200px
    @media screen and (min-width: 992px)
      padding-bottom 300px
    @media screen and (min-width: 1240px)
      padding-top 50rem
      display block
      padding-bottom 0
    .logo
      width 325.5px
      height 102.5px
      background url("../images/lead-logo.png") no-repeat 0 0
      background-size contain
      max-width 90%
      margin-left auto
      margin-right auto
      margin-bottom 15px
      @media screen and (max-height: 380px) and (max-width: 340px)
        width 300px
      @media screen and (min-width: 1024px) and (min-height: 1360px)
        width 651px
        height 205px
      @media screen and (min-width: 1240px)
        width 651rem
        height 205rem
    h1
      display inline-block
      vertical-align middle
      background #111
      color #c2c2c2
      font-size 18px
      @media screen and (min-width: 1024px) and (min-height: 1360px)
        font-size 38px
      @media screen and (min-width: 1240px)
        font-size 38rem
    h1,
    .logo
      transform translateY(-25px)
      transition transform .5s cubic-bezier(.25,-0.55,.25,.25), opacity .5s cubic-bezier(.25,-0.55,.25,.25)
      opacity 0
    .logo
      section.active &
        transform translateY(0px)
        opacity 1
        transition-delay .3s
    h1
      section.active &
        transform translateX(0px)
        opacity 1
        transition-delay .5s
  .mouse-down,
  .shapes
    opacity 0
    transition opacity .5s cubic-bezier(.25,-0.55,.25,.25)
    section.active &
      opacity 1 !important
      transition-delay .5s

.fullpage-wrapper {
  width: 100%!important;
  transform: none!important;
}

.fp-section {
  width: 100%!important;
  position: absolute;
  left: 0;
  top: 0;
  visibility: hidden;
  opacity: 0;
  z-index: 0;
  transition: all .7s ease-in-out;
}

.fp-section.active {
  visibility: visible;
  opacity: 1;
  z-index: 1;
}

html, body, #main
  height 100%
  .section
    height 100%
body
  overflow hidden
.fp-viewing-0
  #works
    z-index 0 !important