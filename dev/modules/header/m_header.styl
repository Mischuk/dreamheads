#header
  position fixed
  left 0
  top 0
  width 100%
  z-index 100
  text-align right
  height 50px
  line-height 50px
  @media SM
    background none
  @media screen and (min-width: 1200px) and (min-height: 768px)
    height 80px
  @media screen and (min-width: 1600px) and (min-height: 900px)
    height 140px
  .wrapper
    max-width none
  .logo
    position absolute
    left 10px
    top 50%
    width 120px
    height 38px
    margin-top -19px
    z-index 74
    visibility visible
    transition visibility 0s linear 0s, opacity 500ms ease-in
    transition-delay 1s
    @media screen and (min-width: 768px)
      width 145px
      height 46px
      margin-top -18px
    @media screen and (min-width: 1200px) and (min-height: 768px)
      width 200px
      height 64px
      margin-top -30px
    @media screen and (min-width: 1300px) and (min-height: 700px)
      left 20px
    @media screen and (min-width: 1600px) and (min-height: 900px)
      width 253px
      height 80px
      top 0
      left 60px
      margin-top 36px
    @media screen and (max-height: 400px)
      display none !important
    body.fp-viewing-0 &
      opacity 0
      visibility hidden
      transition visibility 0s linear 500ms, opacity 500ms
      transition-delay 0
    a, img
      display block
    img
      max-width 100%
  .btn-nav
    anim()
    overflow hidden
    position absolute
    height 50px
    width 50px
    right 0
    top 0
    z-index 75
    @media SM
      display none
    &:after
      anim()
      content ''
      position absolute
      right 0
      bottom 0
      height 1px
      background #b3b3b3
      width 0
      display none
    &.is-open
      &:after
        width 100%
      a
        span
          opacity 0
          transform translateX(-5px)
        &:after
          transform rotate(135deg) translate(-6px, 6px)
        &:before
          transform rotate(-135deg) translate(-6px, -6px)
    a
      position relative
      display block
      width 50px
      height 100%
      float right
      cursor pointer
      background none
      &:after,
      &:before,
      span
        anim()
        content ''
        position absolute
        left 50%
        width 30px
        margin-left -15px
        height 3px
        background #c2c2c2
      &:before
        top 15px
      &:after
        bottom 15px
      span
        top 50%
        margin-top -1.5px

  nav
    transition transform 0.3s ease-in, opacity 1s ease-in
    position absolute
    left 0
    top 0px
    width 100%
    background #1a1717
    z-index 50
    transform translateY(-100%)
    @media SM
      clearfix()
      transform translateY(0%)
      background none
      position relative
      top 0
      left 0
    body.fp-viewing-0 &
      @media SM
        opacity 0
        left -200%
    &.is-open
      transform translateY(0%)
      z-index 74
  ul
    display block
    text-align left
    padding 10px 0
    @media SM
      clearfix()
      float right
      padding 0
    li
      @media SM
        float left
        margin-left 10px
      @media screen and (min-width: 1200px) and (min-height: 768px)
        margin-left 15px
        margin-right 15px
      @media screen and (min-width: 1600px) and (min-height: 768px)
        margin-left 30px
        margin-right 30px
      @media screen and (min-width: 1600px) and (min-height: 900px)
        margin-top 30px
        margin-bottom 30px
      button
        anim()
        display block
        line-height 1
        color #8b8b8b
        font-size 18px
        padding 15px
        background none
        border none
        @media SM
          padding 15px 5px
        @media screen and (min-width: 1200px) and (min-height: 768px)
          padding 30px 15px
        @media screen and (max-height: 300px)
           padding 10px 15px
        &:hover
          color #b1b1b1
          span
            &:after,
            &:before
              width 0%
        span
          position relative
          &:after,
          &:before
            anim()
            content ''
            position absolute
            bottom 0
            width 50%
            height 1px
            background @color
          &:after
            left 50%
          &:before
            right 50%
