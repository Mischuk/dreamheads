.m_productions
  // Borders
  @media screen and (min-height: 900px) and (min-width: 1600px)
    padding-top 100px
  .item
    opacity 0
    transition all .5s ease-in
    &.is-show
      anim()
      opacity 1
      .icon
        transition-delay .5s
        transform scale(1)
      .label
        transition-delay 1s
        opacity 1
    @media screen and (max-width: 567px) and (min-height: 380px)
      &:nth-child(2),
      &:nth-child(4),
      &:nth-child(6)
        border-left 1px solid transparent
      &:nth-child(3),
      &:nth-child(4)
        border-top 1px solid transparent
        border-bottom 1px solid transparent
    @media screen and (min-width: 568px)
      &:nth-child(2),
      &:nth-child(5)
        border-left 1px solid transparent
        border-right 1px solid transparent
      &:nth-child(4),
      &:nth-child(5),
      &:nth-child(6)
        border-top 1px solid transparent
    &.is-show-border
      @media screen and (max-width: 567px)
        &:nth-child(2),
        &:nth-child(4),
        &:nth-child(6)
          border-color #2e2e2e
        &:nth-child(3),
        &:nth-child(4)
          border-color #2e2e2e
      @media screen and (min-width: 568px)
        &:nth-child(2),
        &:nth-child(5)
          border-color #2e2e2e
        &:nth-child(4),
        &:nth-child(5),
        &:nth-child(6)
          border-color #2e2e2e
  // end Borders
  .item
    float left
    width 50%
    padding-top 7.5px
    padding-bottom 7.5px
    cursor default
    sn()
    @media screen and (max-height: 380px)
      width 33.333%
      padding-top 15px
      padding-bottom 15px
      &:nth-child(3n+1)
        clear left
    @media screen and (min-width: 568px)
      width 33.333%
      padding-top 15px
      padding-bottom 15px
      &:nth-child(3n+1)
        clear left
    @media screen and (min-height: 540px)
      padding-top 7.5px
      padding-bottom 7.5px
    @media screen and (min-height: 640px)
      padding-top 15px
      padding-bottom 15px
    @media screen and (min-width: 1024px) and (min-height: 740px)
      padding 30px 0
    @media screen and (min-width: 1600px) and (min-height: 900px)
      padding 60px 0
    a
      color #fff
      &:hover
        .label
          color #b1b1b1 + 50%
    .icon
      height 60px
      max-width 100%
      transform scale(1.2)
      transition transform 1s ease-in
      @media screen and (min-height: 540px)
        height 80px
      @media screen and (min-height: 640px)
        height 100px
      @media screen and (min-width: 1600px) and (min-height: 900px)
        height 135px
      > div
        max-height 100%
        max-width 100%
        > svg
          max-width 100%
          height 60px
          @media screen and (min-height: 540px)
            height 80px
          @media screen and (min-height: 640px)
            height 100px
          @media screen and (min-width: 1600px) and (min-height: 900px)
            height 135px
    .label
      color #b1b1b1
      font-size 13px
      padding-top 10px
      opacity 0
      transition opacity 1s ease-in
      @media screen and (min-height: 640px) and (min-width: 375px)
        font-size 15px
      @media screen and (min-height: 768px) and (min-width: 768px)
        font-size 18px
      @media screen and (min-width: 1024px) and (min-height: 740px)
        padding-top 25px
      @media screen and (min-width: 1600px) and (min-height: 900px)
        padding-top 35px
